general{
	interval = 1
}


order+="cpu_usage 0"
order+="disk /"
order+="wireless _first_"
order+="battery 0"
order+="time"

disk "/" {
    format = "%avail"
}

wireless _first_ {
        format_up = "%bitrate"
        format_down= " down"
        
}

battery 0 {
    integer_battery_capacity = true
    hide_seconds=true
    format = "%status %percentage %remaining "
    status_chr = "⚡ "
    status_bat = ""
    status_unk = "? UNK"
    status_full = "☻ "
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}
